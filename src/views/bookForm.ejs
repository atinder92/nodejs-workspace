<!DOCTYPE html>
<html>
<head>
 <title>Add new book</title>
    <!--inject:css-->
    <link rel="stylesheet" href="/css/app.css">
    <!--endinject-->
    
    <!-- bower:css -->
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <!-- endbower -->

    <!--inject:js-->
    <script src="/js/main.js"></script>
    <!--endinject-->
</head>
<body class="background-book-form">
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Node App</a>
    </div>
    <ul class="nav navbar-nav">
       <% for(i=0;i<nav.length;i++){ %>
      <li><a href="<%= nav[i].Link %>"><%= nav[i].Text %></a></li>
      <% } %>


    </ul>
  </div>
</nav>
<div class="container">
<h3>Add new Book</h3>
<br>
<div class="book-form-container">
<!--Add book form  -->
<form method="post"  enctype="multipart/form-data" action="addBooksForm/newitem">
  <div class="form-group">
    <input type="text" placeholder="Book Name" name="bookName" class="form-control" id="bookName">
  </div>
  <div class="form-group">
    <input type="text" placeholder="Book Author" name="bookAuthor" class="form-control" id="bookAuthor">
  </div>
 <div class="form-group">
    <textarea type="text" placeholder="Book Description" name="bookDescription" rows="7" class="form-control" id="bookDescription"></textarea>
  </div>

<div class="form-group">
    <b>Upload an image</b> <br/><br> <input type="file" name="bookImage" multiple="multiple">
 </div> 

  <button type="submit" class="btn btn-default">Submit</button>
</form><br>
<% if(error){ %>
    <div class="alert alert-danger">
        <%=error%>
    </div> 
<%
} %>
<% if(savedSuccess){ %>
 
    <div class="alert alert-success">
        <%=savedSuccess%></div> 
    </div>
<% } %>



  </div>



</div>    


</div>    

</body>

<!-- bower:js -->
<script src="/lib/jquery/dist/jquery.js"></script>
<script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
<!-- endbower -->

</html>